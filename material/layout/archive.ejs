<% var last; %>
<% page.posts.each(function(post){ %>
  <% var year = post.date.year(); %>
  <% if (last != year){ %>
    <% last = year; %>
    <div class="section">
      <h2 class="no-gap"><small>archive</small>&nbsp;/&nbsp;<%= year %></h2>
    </div>
  <% } %>
  <div class="section">
    <%- partial('_partial/article-excerpt', {post: post}) %>
  </div>
<% }) %>
