<ul id="dropdown-tags" class="dropdown-content">
  <li>
  <%- list_tags({
    style: "",
    show_count: false,
    separator: "</li><li>"
  }) %>
  </li>
</ul>

<div class="navbar-fixed">
  <nav role="navigation">
    <div class="nav-wrapper container">
      <div class="row">
        <div class="col s12 l8 offset-l2">
          <a id="logo-container" href="<%- url_for() %>" class="brand-logo"><%= config.title %></a>
          <ul class="right hide-on-med-and-down">
            <% for (var i in theme.menu){ %>
              <li>
                <a href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
              </li>
            <% } %>
            <li>
              <a class="dropdown-button" href="#!" data-activates="dropdown-tags">Tags<i class="material-icons right">arrow_drop_down</i></a>
            </li>
          </ul>

          <ul id="nav-mobile" class="side-nav">
            <% for (var i in theme.menu){ %>
              <li>
                <a href="<%- url_for(theme.menu[i]) %>"><%= i %></a>
              </li>
            <% } %>
          </ul>
          <a href="#" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
        </div>
      </div>
    </div>
  </nav>
</div>
